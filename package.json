{
  "name": "voxpage",
  "version": "1.0.0",
  "type": "module",
  "description": "VoxPage Firefox Extension - Text-to-Speech for any webpage",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "dev:chrome": "wxt -b chrome",
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
    "build:chrome": "wxt build -b chrome",
    "build:all": "wxt build -b firefox && wxt build -b chrome && wxt build -b edge",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "zip:chrome": "wxt zip -b chrome",
    "postinstall": "wxt prepare",
    "test": "npm run lint && node --experimental-vm-modules node_modules/.bin/jest",
    "test:unit": "node --experimental-vm-modules node_modules/.bin/jest",
    "test:coverage": "node --experimental-vm-modules node_modules/.bin/jest --coverage",
    "test:visual": "npx playwright test",
    "test:visual:update": "npx playwright test --update-snapshots",
    "test:all": "npm run test && npm run test:visual",
    "lint": "eslint --cache .",
    "lint:fix": "eslint --cache . --fix",
    "lint:manifest": "web-ext lint",
    "deps:check": "madge --circular entrypoints/ utils/",
    "deps:graph": "madge --image deps.svg entrypoints/ utils/",
    "duplication": "jscpd --threshold 10 --min-tokens 50 entrypoints/ utils/",
    "quality": "npm run deps:check && npm run duplication && npm run lint:manifest"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.19.27",
    "@types/webextension-polyfill": "^0.10.7",
    "eslint": "^8.57.0",
    "eslint-plugin-import-x": "^4.16.1",
    "jest": "^29.7.0",
    "jest-axe": "^8.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-webextension-mock": "^3.9.0",
    "jscpd": "^4.0.5",
    "madge": "^8.0.0",
    "typescript": "^5.9.3",
    "vite": "^5.4.21",
    "web-ext": "^7.11.0",
    "wxt": "^0.20.13"
  },
  "keywords": [
    "firefox",
    "extension",
    "tts",
    "text-to-speech",
    "accessibility"
  ],
  "license": "MIT",
  "dependencies": {
    "@webext-core/messaging": "^2.3.0",
    "cld3-asm": "^4.0.0",
    "franc-min": "^6.2.0",
    "zod": "^4.3.4"
  }
}
